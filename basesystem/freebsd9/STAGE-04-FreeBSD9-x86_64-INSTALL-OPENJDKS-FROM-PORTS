# ${CP_BIN} -r /usr/local/openjdk6 /Software/Openjdk6-${arch}/
# check_command_result $?
# ${CP_BIN} -r /usr/local/lib/* /Software/Openjdk6-${arch}/lib/
# check_command_result $?
