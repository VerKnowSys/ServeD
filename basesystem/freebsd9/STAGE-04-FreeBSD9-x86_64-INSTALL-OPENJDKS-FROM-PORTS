# done
# ${RM_BIN} -vfr /Software/Openjdk6-${arch}/openjdk6/demo
# ${RM_BIN} -vfr /Software/Openjdk6-${arch}/openjdk6/sample
# ${RM_BIN} -vfr /Software/Openjdk6-${arch}/openjdk6/man
# ${RM_BIN} -vf /Software/Openjdk6-${arch}/openjdk6/src.zip


# echo "7"
