#!/bin/bash

if [ `uname` == "Linux" ]; then
    platform="linux";
    libs="*.so"
elif [ `uname` == "Darwin" ]; then
    platform="mac";
    libs="lib/*.dylib"  #" lib/*.jnilib"
fi

export MVN_EXEC="/usr/bin/mvn"
# export MVN_PARAMS="-T C2 -e -Dmaven.test.skip.exec=true -Dmaven.test.skip=true"
# export MVN_TEST_PARAMS="-T C2 -e"

export JAVA_OPTS="-d32 -Xms32m -XX:NewRatio=1 -Xmx512m -Dfile.encoding=UTF-8 -XX:+UseFastAccessorMethods"
export MAVEN_OPTS_ADDITIONAL="-e -Dmaven.test.skip.exec=true -Dmaven.test.skip=true"
export MAVEN_OPTS="-Dbuild.platform=$platform -Djava.library.path=../../lib/ -Dactors.corePoolSize=8 -Djna.library.path=../../lib/"

export CC="/usr/bin/clang"
export CFLAGS="-Werror -arch i386 -O3 -fPIC -pedantic -march=pentium4 -ffast-math -fmessage-length=65"


export COMMAND="bin/runner $@"