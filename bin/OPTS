#!/bin/bash

# Multithreaded, 2 Cores for process:
#alias mvn='mvn -T 2C'

export JAVA_OPTS="-d32 -Xms256m -XX:NewRatio=1 -Xmx256m -Dfile.encoding=UTF-8 -XX:+UseFastAccessorMethods"

if [ `uname` == "Linux" ]; then
    platform="linux";
elif [ `uname` == "Darwin" ]; then
    platform="mac";
fi

export MAVEN_OPTS="$JAVA_OPTS -Dbuild.platform=$platform -Djava.library.path=../../lib/"