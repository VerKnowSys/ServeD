#!/bin/bash

# Multithreaded, 2 Cores for process:
#alias mvn='mvn -T 2C'


if [ `uname` == "Linux" ]; then
    platform="linux";
elif [ `uname` == "Darwin" ]; then
    platform="mac";
fi

export MVN_EXEC="/usr/bin/mvn"
export MVN_PARAMS="-T C2 -Dmaven.test.skip.exec=true"

export JAVA_OPTS="-d32 -Xms256m -XX:NewRatio=1 -Xmx512m -Dfile.encoding=UTF-8 -XX:+UseFastAccessorMethods"
export MAVEN_OPTS="$JAVA_OPTS -Dbuild.platform=$platform -Djava.library.path=../../lib/ -Dactors.corePoolSize=8"