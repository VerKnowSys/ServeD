#!/bin/sh

if [ "$1" = "deep" ]; then
    echo "Deep clean"
    rm -rf ~/.ivy2
fi

for i in *; do
    if [ -d "$i" ]; then
        sudo rm -rf "$i/lib_managed"
        rm -rf "$i/target"
    fi
done

bin/sbt clean
echo "Project source cleaned.."

rm -f lib/*.o
rm -f ./kick ./shell
echo "Native code cleaned."
