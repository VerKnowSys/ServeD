#!/bin/sh


pwd=$(pwd)
scala=$(cat VERSION-SCALA)
version=$(cat VERSION)
jar="${pwd}/svd.cli/target/scala-${scala}/cli_${scala}-${version}.jar"

bin/sbt "project cli" compile package

if [ -e "${jar}" ]; then
    echo "Executing: ${jar}"
    java -d32 -XX:MaxPermSize=128M -XX:+UseParallelGC -Xms64m -Xmx256m -Dfile.encoding=UTF-8 -noverify -jar "${jar}" "$@"
else
    echo "Assembly not found: ${jar}. Use build script!"
fi
