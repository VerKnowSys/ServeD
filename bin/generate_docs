#!/bin/zsh

if which pygmentize > /dev/null; 
then
else
    easy_install pygments
fi

if gem list rocco | grep rocco > /dev/null;
then
else
    p=`pwd`
    cd /tmp
    rm -rf /tmp/rocco
    git clone git://github.com/VerKnowSys/rocco.git
    cd rocco
    rake install
    cd $p
fi

rocco docs/**/*.scala -o target
