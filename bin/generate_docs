#!/bin/sh

# 2011-06-09 21:50:18 - dmilith - NOTE: absolute path to avoid using zsh built in which command:
tst=$(/usr/bin/which pygmentize > /dev/null)
if [ "$?" = "0" ]; then
    echo "Found pygments"
else
    easy_install pygments
fi

tst=$(gem list jekyll | grep jekyll > /dev/null)
if [ "$?" = "0" ]; then
    echo "Found jekyll"
else
    gem install jekyll
fi

echo "Generating site"
jekyll --pygments docs/site target/_site
