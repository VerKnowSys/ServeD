#!/usr/bin/env zsh
# This Software is a close code project. You may not redistribute this code without permission of author.


. bin/OPTS

bin/prepareLibs

if [ $platform = "mac" ]; then
    echo "Libraries from lib/ folder will be copied to /usr/lib/.."
    sudo cp -v lib/*.dylib /usr/lib/
elif [ $platform = "freebsd" ]; then
    echo "Libraries from lib/ folder will be copied to /usr/local/openjdk6/jre/lib/amd64/.."
    sudo cp -v lib/*.so /usr/local/openjdk6/jre/lib/amd64/
fi

exit 0