#!/bin/bash
# This Software is a close code project. You may not redistribute this code without permission of author.

. bin/OPTS
bin/deploy
bin/install

mkdir -p target

# CLI
cd src/svd.cli
mvn assembly:assembly
cd ../..

export MAVEN_OPTS="-Dbuild.platform=$platform -Djava.library.path=../../../../lib/ -Djna.library.path=../../../../lib/"

# svd maintainer
cd src/svd.maintainer
mvn assembly:assembly
cd ../..


mv src/svd.cli/target/svd.cli-0.1.0-jar-with-dependencies.jar target/svd.cli.jar
mv src/svd.maintainer/target/svd.maintainer-0.1.0-jar-with-dependencies.jar target/svd.jar


exit 0