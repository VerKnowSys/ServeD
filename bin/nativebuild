#!/bin/sh


system="$(uname)"
export CXX="g++"

check() {
    if [ "$1" = "0" ]; then
        echo "$2 compiled sucessfully"
    else
        echo "Failure"
        exit 1
    fi
}

$CXX -Os -c -fPIC lib/kickstart/utils.cc -o lib/utils.o
check $? "Utils"

$CXX -Os -c -fPIC lib/kickstart/core.cc -o lib/core.o
check $? "Core"

$CXX -Os -fPIC lib/kickstart/kick.cc -o kick lib/core.o lib/utils.o
check $? "KickStart"

rm -rf lib/*.o
