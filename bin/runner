#!/usr/bin/env zsh
# This Software is a close code project. You may not redistribute this code without permission of author.
# @author: dmilith


. bin/OPTS

if [ "$1" = "test" ]; then
    export MAVEN_OPTS_ADDITIONAL="-e"
fi
echo "Runner params given: $@"
echo "Maven opts: $MAVEN_OPTS"
echo "Additional opts: $MAVEN_OPTS_ADDITIONAL"

cd src
cmd="$MVN_EXEC $MAVEN_OPTS $MAVEN_OPTS_ADDITIONAL $* | ../bin/color"
eval $cmd
