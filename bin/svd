#!/bin/sh

pwd=$(pwd)
jar="${pwd}/svd.core/target/scala_2.9.0/core-assembly-1.0.jar"

if [ -e "${jar}" ]; then
    echo "Executing: ${jar}"
    sudo java -XX:+UseCompressedOops -XX:MaxPermSize=512M -XX:+UseParallelGC -Xms64m -Xmx768m -Dfile.encoding=UTF-8 -noverify -server -jar "${jar}" "$@"
else
    echo "Assembly not found. Use build script!"
fi
