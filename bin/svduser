#!/bin/sh

pwd=$(pwd)
version="$(cat VERSION)"
jar="${pwd}/svd.user/target/user-assembly-${version}.jar"

if [ -e "${jar}" ]; then
    echo "Executing: ${jar}"
    java -d32 -XX:MaxPermSize=64M -XX:+UseParallelGC -Xms8m -Xmx128m -Dfile.encoding=UTF-8 -noverify -client -Djna.library.path=$(pwd)/lib -jar "${jar}" $(id -u) "$@"
else
    echo "Assembly not found. Use build script!"
fi
