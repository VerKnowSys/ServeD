#!/bin/sh
# This Software is a close code project. You may not redistribute this code without permission of author.
# @author: dmilith


. bin/OPTS

echo "Running tests on platform: $platform, libs: $libs, args: $*"

dirList=( \
svd.notifications \
svd.maintainer \
svd.systemmanager \
svd.utils \
)

# *.jnilib
toBeDeletedLibs=(
*.dylib \
*.so \
)


echo "Copying libraries"
for i in ${dirList[@]}; do
  cp -v ${libs} src/$i/
done


$COMMAND test $*


echo "Cleaning up"
for i in ${dirList[@]}; do
  for j in ${toBeDeletedLibs[@]}; do
    rm -rfv src/$i/$j
  done
done


exit 0
