#!/bin/bash
# deploys to relative path; with the intent of copying to drakor ( sftp://verknowsys@verknowsys.info/home/verknowsys/public_html/media/.m2/repository ) next
# 2009-08-05 02:27:53 ; karolrvn

commonPart="mvn -e deploy:deploy-file -DgeneratePom=true -Dpackaging=jar -Durl=file:./mvn_deploy"

# -DrepositoryId=codadris_maven2_repo

$commonPart -Ddescription="Quaqua"              -Dfile="lib/quaqua.jar"              -DgroupId="org.quaqua"              -DartifactId="org.quaqua"              -Dversion="5.4.1"
$commonPart -Ddescription="Quaqua swing-layout" -Dfile="lib/quaqua-swing-layout.jar" -DgroupId="org.quaqua.swing-layout" -DartifactId="org.quaqua.swing-layout" -Dversion="5.4.1"

# from mvn output:
# mvn -e deploy:deploy-file -DgroupId=org.quaqua.swing-layout -DartifactId=org.quaqua.swing-layout -Dversion=5.4.1 -Dpackaging=jar -Dfile=/path/to/file -Durl=[url] -DrepositoryId=[id]