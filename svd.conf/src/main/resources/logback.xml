<?xml version="1.0" encoding="UTF-8"?>

<configuration scan="true" debug="true" scanPeriod="10 seconds">
  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
			<layout class="com.verknowsys.served.utils.ANSIColorPatternLayout">
	      <pattern>%-5level [%thread | %logger{10}]: %message%n</pattern>
			</layout>
    </encoder>
  </appender>

  <appender name="R" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <File>./logs/akka.log</File>
    <encoder>
      <pattern>[%4p] [%d{ISO8601}] [%t] %c{1}: %m%n</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>./logs/akka.log.%d{yyyy-MM-dd-HH}</fileNamePattern>
    </rollingPolicy>
  </appender>

  <logger name="akka" level="WARN"/>
	<logger name="com.verknowsys.served" level="TRACE"/>

  <root level="INFO">
    <appender-ref ref="stdout"/>
    <appender-ref ref="R"/>
  </root>
</configuration>
